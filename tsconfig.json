{
  "compilerOptions": {
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "strictNullChecks": false,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    // "typeRoots": ["src/components/index.d.ts", "node_modules/@types", "../@types"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
